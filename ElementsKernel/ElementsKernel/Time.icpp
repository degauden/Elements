    const Elements::TimeSpan &ts) {
  return Elements::Time(t.ns() + ts.ns());
}

inline Elements::Time operator+(const Elements::TimeSpan &ts,
    const Elements::Time &t) {
  return Elements::Time(t.ns() + ts.ns());
}

inline Elements::TimeSpan operator-(const Elements::Time &t1,
    const Elements::Time &t2) {
  return Elements::TimeSpan(t1.ns() - t2.ns());
}

inline Elements::Time operator-(const Elements::Time &t,
    const Elements::TimeSpan &ts) {
  return Elements::Time(t.ns() - ts.ns());
}

