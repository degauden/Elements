// --- operators for serialization ---

// Output serialization
inline StreamBuffer& operator<<(StreamBuffer &s, const Elements::Time &t) {
  return s << t.ns();
}
// Input serialization
inline StreamBuffer& operator>>(StreamBuffer &s, Elements::Time &t) {
  Elements::Time::ValueType tmp;
  s >> tmp;
  t = Elements::Time(tmp);
  return s;
}

