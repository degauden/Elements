  return t1.ns() == t2.ns();
}

inline bool operator!=(const Elements::Time &t1, const Elements::Time &t2) {
  return t1.ns() != t2.ns();
}

inline bool operator<(const Elements::Time &t1, const Elements::Time &t2) {
  return t1.ns() < t2.ns();
}

inline bool operator<=(const Elements::Time &t1, const Elements::Time &t2) {
  return t1.ns() <= t2.ns();
}

inline bool operator>(const Elements::Time &t1, const Elements::Time &t2) {
  return t1.ns() > t2.ns();
}

inline bool operator>=(const Elements::Time &t1, const Elements::Time &t2) {
  return t1.ns() >= t2.ns();
}

inline bool operator!(const Elements::Time &t) {
  return !t.ns();
}

