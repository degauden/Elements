# EditorConfig is awesome: https://EditorConfig.org

[*]
indent_style = space
trim_trailing_whitespace = true
charset = utf-8
indent_size = 2

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

# Do not apply inside build directories
[/build.*/**]
max_line_length = unset

[/InstallArea/**]
max_line_length = unset